{
  "name": "hacks-of-mistria",
  "version": "0.3.0",
  "description": "A tool to edit your save files in Fields of Mistria",
  "main": "./out/main/index.js",
  "author": "arkatsy, dwlim12",
  "scripts": {
    "format": "prettier --write .",
    "dev": "set NODE_ENV=development && electron-vite dev",
    "measure-unpacking": "node ./measure-unpacking.js",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build": "set NODE_ENV=production && electron-vite build && electron-builder --win"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.0.2",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@emotion/react": "^11.13.3",
    "@tanstack/react-query": "^5.61.3",
    "@tanstack/react-query-devtools": "^5.61.3",
    "next-themes": "^0.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-vite": "^2.3.0",
    "prettier": "^3.3.2",
    "vite": "^5.3.1"
  }
}
